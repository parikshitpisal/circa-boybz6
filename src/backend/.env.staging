# Server Configuration
PORT=3000
API_VERSION=v1
CORS_ORIGINS=https://staging.dollarfunding.com

# Security Configuration
JWT_SECRET=${JWT_SECRET}
TOKEN_EXPIRY=1h
REFRESH_TOKEN_EXPIRY=24h
MFA_ENABLED=true
ENCRYPTION_KEY=${ENCRYPTION_KEY}

# Database Configuration
DB_HOST=staging-db.dollarfunding.com
DB_PORT=5432
DB_NAME=dollarfunding_staging
DB_USER=${DB_USER}
DB_PASSWORD=${DB_PASSWORD}
DB_SSL=true

# Redis Cache Configuration
REDIS_HOST=staging-redis.dollarfunding.com
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_TTL=3600

# Message Queue Configuration
RABBITMQ_URL=amqp://staging-mq.dollarfunding.com
RABBITMQ_EXCHANGE=dollarfunding.staging

# Document Processing Configuration
OCR_CONFIDENCE_THRESHOLD=0.95
DOCUMENT_STORAGE_BUCKET=staging-documents.dollarfunding.com
AWS_REGION=us-east-1

# Email Service Configuration
IMAP_HOST=imap.dollarfunding.com
IMAP_PORT=993
SMTP_HOST=smtp.dollarfunding.com
SMTP_PORT=587
EMAIL_USER=${EMAIL_USER}
EMAIL_PASSWORD=${EMAIL_PASSWORD}

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
STANDARD_TIER_RATE=1000
PREMIUM_TIER_RATE=5000

# Global Configuration
NODE_ENV=staging
LOG_LEVEL=info
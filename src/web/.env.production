# Version: 1.0.0
# Enhanced security and monitoring configuration for production deployment

# Environment Identifier
VITE_NODE_ENV=production

# API Configuration
VITE_API_BASE_URL=https://api.dollarfunding.com/api/v1
VITE_API_TIMEOUT=30000
VITE_UPLOAD_TIMEOUT=60000
VITE_MAX_RETRIES=3
VITE_RETRY_DELAY=1000

# Authentication Configuration
VITE_AUTH_DOMAIN=auth.dollarfunding.com
VITE_AUTH_CLIENT_ID=${AUTH_CLIENT_ID}
VITE_AUTH_AUDIENCE=https://api.dollarfunding.com
VITE_MFA_ENABLED=true
VITE_SESSION_TIMEOUT=1800

# Storage Configuration
VITE_STORAGE_URL=https://storage.dollarfunding.com

# Security and Monitoring
VITE_ENABLE_ERROR_REPORTING=true

# Rate Limiting
VITE_RATE_LIMIT_MAX=1000
VITE_RATE_LIMIT_WINDOW=3600

# Content Security Policy
VITE_CSP_ENABLED=true
VITE_HSTS_ENABLED=true

# Performance Monitoring
VITE_ENABLE_PERFORMANCE_TRACKING=true
VITE_ENABLE_API_LOGGING=true

# Error Tracking
VITE_ERROR_TRACKING_ENABLED=true
VITE_ERROR_SAMPLING_RATE=100

# Feature Flags
VITE_ENFORCE_PASSWORD_POLICY=true
VITE_ENFORCE_SESSION_TIMEOUT=true
VITE_ENABLE_AUDIT_LOGGING=true

# Document Processing
VITE_MAX_UPLOAD_SIZE=25000000
VITE_ALLOWED_FILE_TYPES=application/pdf

# Cache Configuration
VITE_CACHE_TTL=3600
VITE_ENABLE_RESPONSE_CACHE=true

# Monitoring Endpoints
VITE_HEALTH_CHECK_ENDPOINT=/health
VITE_METRICS_ENDPOINT=/metrics